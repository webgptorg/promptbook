{
    "name": "promptbook-agents-server",
    "scripts": {
        "migrate-database": "npx tsx ./src/database/migrate.ts",
        "generate-reserved-paths": "ts-node ./scripts/generate-reserved-paths/generate-reserved-paths.ts",
        "prebuild": "npm run generate-reserved-paths && npx kill-port 4440 ||  exit 0",
        "predev": "npm run generate-reserved-paths && npx kill-port 4440 ||  exit 0",
        "dev": "next dev -p 4440",
        "test": "npm run lint && npm run test-e2e",
        "test-e2e": "playwright test",
        "pretest-build": "npx kill-port 4021",
        "test-build": "next build && node ./scripts/prerender-homepage.js",
        "build": "next build && node ./scripts/prerender-homepage.js",
        "start": "next start -p 4440",
        "lint": "next lint --max-warnings=0",
        "postinstall": "cd ../../ && npm ci"
    }
}
